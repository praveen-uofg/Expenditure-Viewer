<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dataModel"
            type="com.github.eletransactionviewer.model.MonthWiseModel"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:contentPadding="@dimen/article_title_padding"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardCornerRadius="@dimen/card_album_radius">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="marquee"
                    android:paddingBottom="@dimen/article_title_padding"
                    android:paddingTop="@dimen/article_title_padding"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="24dp"
                    android:text="@{dataModel.bankName}"
                    card_view:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/card_number_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:paddingTop="@dimen/article_title_padding"
                    android:singleLine="true"
                    android:text="Card Used:"
                    android:textSize="16dp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/bank_name" />

                <TextView
                    android:id="@+id/card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:paddingTop="@dimen/article_title_padding"
                    android:singleLine="true"
                    android:text="@{dataModel.cardnumber}"
                    android:textSize="16dp"
                    card_view:layout_constraintBaseline_toBaselineOf="@id/card_number_view"
                    card_view:layout_constraintStart_toEndOf="@id/card_number_view" />

                <TextView
                    android:id="@+id/trans_amount_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:paddingTop="@dimen/article_title_padding"
                    android:paddingBottom="@dimen/article_title_padding"
                    android:singleLine="true"
                    android:text="Amount Spent:"
                    android:textSize="@dimen/article_title"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/card_number_view" />

                <TextView
                    android:id="@+id/trans_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:paddingTop="@dimen/article_title_padding"
                    android:paddingBottom="@dimen/article_title_padding"
                    android:singleLine="true"
                    android:text="@{dataModel.totalAmountString}"
                    android:textSize="@dimen/article_title"
                    card_view:layout_constraintTop_toBottomOf="@id/card_number"
                    card_view:layout_constraintStart_toEndOf="@id/trans_amount_view" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</layout>